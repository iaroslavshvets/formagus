  "license": "MIT",
  "sideEffects": false,
  "authors": [
    {
      "name": "Iaroslav Shvets",
      "email": "iaroslav.shvets@gmail.com"
    }
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "rollup --config",
    "test": "jest",
    "test:unit": "jest",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "test:ci-coverage": "jest --ci --coverage",
    "posttest": "yarn test:coverage",
    "precommit": "lint-staged",
    "postcommit": "git update-index --again",
    "prepush": "yarn test",
    "lint": "yarn es-lint && yarn format",
    "format": "prettier --write '{src,__tests__}/**/*.{ts,tsx,js,json,scss,css}'",
    "es-lint": "eslint --fix '{src,__tests__}/**/*.{ts,tsx}'",
    "commit-cz": "git-cz"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "/dist/src",
    "/dist/index.cjs",
    "/dist/index.js"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@swc/core": "^1.7.0-nightly-20240717.3",
    "@swc/jest": "^0.2.36",
    "@testing-library/react": "^14.3.1",
    "@types/hoist-non-react-statics": "^3.3.5",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-isaacscript": "^3.12.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.4.0",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "mobx": "^6.13.0",
    "mobx-react-lite": "^4.0.7",
    "prettier": "^3.3.3",
    "prettier-eslint": "^15.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^3.29.4",
    "rollup-plugin-size": "^0.3.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "trier-promise": "^1.0.1",
    "ts-jest": "^29.2.2",
    "ts-loader": "^9.5.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.3.2",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "mobx": "*",
    "mobx-react-lite": "*",
    "react": "*",
    "react-dom": "*"
  },
  "config": {
    "commitizen": {
      "path": "./packages/lib/node_modules/cz-conventional-changelog"
    }
  }
}

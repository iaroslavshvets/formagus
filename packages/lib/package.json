{
  "name": "formagus",
  "description": "Versatile form library powered by Mobx",
  "version": "3.0.1",
  "license": "MIT",
  "author": {
    "name": "Iaroslav Shvets",
    "email": "iaroslav.shvets@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:iaroslavshvets/formagus.git",
    "directory": "/packages/lib"
  },
  "exports": {
    "types": "./dist/types/index.d.ts",
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "!__tests__"
  ],
  "scripts": {
    "build": "rm -rf dist && yarn build:ts",
    "build:ts": "tsc --declarationDir dist/types && tsc --module CommonJS --outDir dist/cjs",
    "commit-cz": "git-cz",
    "es-lint": "eslint ./src/**/*.(json|ts|tsx) --fix --max-warnings=0",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,json,scss,css}'",
    "lint": "yarn es-lint && yarn format",
    "postcommit": "git update-index --again",
    "posttest": "yarn test:coverage",
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "test": "yarn test:unit",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/lodash": "^4.17.16",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.9",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.22.0",
    "is-ci": "^4.1.0",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "mobx": "^6.13.7",
    "mobx-react-lite": "^4.1.0",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "trier-promise": "^1.0.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "vite": "^7.1.9",
    "vitest": "^3.0.9"
  },
  "peerDependencies": {
    "mobx": "*",
    "mobx-react-lite": "*",
    "react": "*",
    "react-dom": "*"
  },
  "engines": {
    "node": ">=22"
  },
  "config": {
    "commitizen": {
      "path": "./packages/lib/node_modules/cz-conventional-changelog"
    }
  }
}
